{
  "name": "chrome-currency-translate",
  "description": "Translate money to the specific currency",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "package": "pnpm build && pnpm zip",
    "zip": "npm pkg get name version | jq '.name + \"-\" + .version' | xargs -I _name_ zip -r _name_.zip dist"
  },
  "dependencies": {
    "@types/chrome": "^0.0.236",
    "@unocss/reset": "^0.52.2",
    "magic-regexp": "^0.7.0",
    "number-precision": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.17",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@unocss/preset-uno": "^0.52.3",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "typescript": "^5.0.2",
    "unocss": "^0.52.1",
    "vite": "^4.3.2",
    "vitest": "^0.31.1"
  },
  "prettier": {
    "editorconfig": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react-refresh"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "react-refresh/only-export-components": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bisquit/chrome-currency-translate.git"
  },
  "bugs": {
    "url": "https://github.com/bisquit/chrome-currency-translate/issues"
  }
}
